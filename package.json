{
  "name": "pmd-client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "dotenv": "^8.2.0",
    "express-favicon": "^2.0.1",
    "http-proxy-middleware": "^1.0.5",
    "react": "^16.13.1",
    "react-confirm-alert": "^2.6.2",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.3",
    "react-toastify": "^6.0.8",
    "tailwindcss": "^1.4.6"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --unhandled-rejections=strict",
    "eject": "react-scripts eject",
    "build-css": "tailwindcss build src/tailwindcss/styles.css -o public/styles.css",
    "docker-build": "docker build . -t mabutalid1/pmdfrontend:latest && docker push mabutalid1/pmdfrontend:latest",
    "up": "docker run --name my-frontend --env HOST=http://host.docker.internal --rm -it -p 3000:3000/tcp -d mabutalid1/pmdfrontend:latest",
    "api": "docker run --name my-pmdapi --env JWTSECRET=devSecret --env HOST=host.docker.internal --env REDISPORT=6379 --env DBNAME=pmd-dev --env USER=marcoadmin0 --env PASS=marcopass0 --rm -p 9000:9000 -d mabutalid1/pmdapi:latest",
    "up-redis": "docker run --rm --name my-redis -p 6379:6379/tcp -d redis:latest"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {}
}
